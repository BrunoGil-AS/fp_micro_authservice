<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Propiedades específicas del Auth Service -->
    <property name="LOG_PATH" value="./logs/auth-service"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%logger{36}] - %msg%n"/>
    <property name="LOG_PATTERN_CONSOLE" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [AUTH-SERVICE] [%logger{36}] - %msg%n"/>
    
    <!-- Console Appender para desarrollo -->
    <springProfile name="!prod">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${LOG_PATTERN_CONSOLE}</pattern>
            </encoder>
        </appender>
    </springProfile>

    <!-- File Appender para logs del Auth Service -->
    <appender name="FILE_AUTH" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/auth-service.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/auth-service.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>40MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>600MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- File Appender para logs de autenticación -->
    <appender name="FILE_AUTHENTICATION" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/auth-authentication.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/auth-authentication.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>30MB</maxFileSize>
            <maxHistory>45</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- File Appender para logs de OAuth2 -->
    <appender name="FILE_OAUTH2" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/auth-oauth2.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/auth-oauth2.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>45</maxHistory>
            <totalSizeCap>400MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- File Appender para logs de base de datos -->
    <appender name="FILE_DATABASE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/auth-database.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/auth-database.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>300MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- File Appender para errores -->
    <appender name="FILE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/auth-service-error.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/auth-service-error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
    </appender>

    <!-- Logger específico para Auth Service -->
        <!-- Configuración para desarrollo (!prod) -->
    <springProfile name="!prod">
        <logger name="com.aspiresys.fp_micro_authservice" level="DEBUG" additivity="false">
<appender-ref ref="FILE_AUTH"/>
        <appender-ref ref="FILE_ERROR"/>
<appender-ref ref="CONSOLE"/>

        </logger>
    </springProfile>
    
    <!-- Configuración para producción (prod) -->
    <springProfile name="prod">
        <logger name="com.aspiresys.fp_micro_authservice" level="DEBUG" additivity="false">
<appender-ref ref="FILE_AUTH"/>
        <appender-ref ref="FILE_ERROR"/>

        </logger>
    </springProfile>

    <!-- Logger para Spring Security -->
        <!-- Configuración para desarrollo (!prod) -->
    <springProfile name="!prod">
        <logger name="org.springframework.security" level="INFO" additivity="false">
<appender-ref ref="FILE_AUTHENTICATION"/>
        <appender-ref ref="FILE_ERROR"/>
<appender-ref ref="CONSOLE"/>

        </logger>
    </springProfile>
    
    <!-- Configuración para producción (prod) -->
    <springProfile name="prod">
        <logger name="org.springframework.security" level="INFO" additivity="false">
<appender-ref ref="FILE_AUTHENTICATION"/>
        <appender-ref ref="FILE_ERROR"/>

        </logger>
    </springProfile>

    <!-- Logger para OAuth2 Authorization Server -->
        <!-- Configuración para desarrollo (!prod) -->
    <springProfile name="!prod">
        <logger name="org.springframework.security.oauth2.server.authorization" level="DEBUG" additivity="false">
<appender-ref ref="FILE_OAUTH2"/>
        <appender-ref ref="FILE_ERROR"/>
<appender-ref ref="CONSOLE"/>

        </logger>
    </springProfile>
    
    <!-- Configuración para producción (prod) -->
    <springProfile name="prod">
        <logger name="org.springframework.security.oauth2.server.authorization" level="DEBUG" additivity="false">
<appender-ref ref="FILE_OAUTH2"/>
        <appender-ref ref="FILE_ERROR"/>

        </logger>
    </springProfile>

    <!-- Logger para JWT -->
    <logger name="org.springframework.security.oauth2.jwt" level="DEBUG" additivity="false">
        <appender-ref ref="FILE_OAUTH2"/>
        <appender-ref ref="FILE_ERROR"/>
    </logger>

    <!-- Logger para autenticación específica -->
    <logger name="org.springframework.security.authentication" level="INFO" additivity="false">
        <appender-ref ref="FILE_AUTHENTICATION"/>
        <appender-ref ref="FILE_ERROR"/>
    </logger>

    <!-- Loggers para base de datos -->
    <logger name="org.hibernate" level="INFO" additivity="false">
        <appender-ref ref="FILE_DATABASE"/>
        <appender-ref ref="FILE_ERROR"/>
    </logger>

    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="FILE_DATABASE"/>
    </logger>

    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="FILE_DATABASE"/>
    </logger>

    <!-- Logger para HikariCP -->
    <logger name="com.zaxxer.hikari" level="INFO" additivity="false">
        <appender-ref ref="FILE_DATABASE"/>
        <appender-ref ref="FILE_ERROR"/>
    </logger>

    <!-- Loggers para dependencias externas -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="com.mysql" level="WARN"/>
    <logger name="org.apache" level="WARN"/>
    <logger name="com.netflix.eureka" level="WARN"/>

    <!-- Root logger -->
        <!-- Root logger para desarrollo (!prod) -->
    <springProfile name="!prod">
        <root level="INFO">
<appender-ref ref="FILE_AUTH"/>
        <appender-ref ref="FILE_ERROR"/>
<appender-ref ref="CONSOLE"/>

        </root>
    </springProfile>
    
    <!-- Root logger para producción (prod) -->
    <springProfile name="prod">
        <root level="INFO">
<appender-ref ref="FILE_AUTH"/>
        <appender-ref ref="FILE_ERROR"/>

        </root>
    </springProfile>
</configuration>
